<ContentPage
    x:Class="RouteRead.Mobile.Views.RoutesPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Routes">

    <CollectionView x:Name="RoutesList" SelectionMode="Single">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Grid Padding="12">
                    <VerticalStackLayout Spacing="2">
                        <Label Text="{Binding Name}" FontSize="18" />
                        <Label Text="{Binding StopCount, StringFormat='Stops: {0}'}" Opacity="0.7"/>
                    </VerticalStackLayout>
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>