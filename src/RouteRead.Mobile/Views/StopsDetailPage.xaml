<ContentPage
    x:Class="RouteRead.Mobile.Views.StopDetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Stop Detail">

    <VerticalStackLayout Padding="16" Spacing="12">
        <Label x:Name="StopName" FontSize="22" />
        <Label x:Name="StopAddress" Opacity="0.7" />

        <Label Text="Enter reading" FontAttributes="Bold" />
        <Entry x:Name="ReadingEntry" Keyboard="Numeric" />

        <Button Text="Save Reading" x:Name="SaveBtn" />
    </VerticalStackLayout>
</ContentPage>